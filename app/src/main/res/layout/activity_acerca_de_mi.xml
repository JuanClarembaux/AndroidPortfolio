<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AcercaDeMi">

    <TextView
        android:id="@+id/acd_bienvenido_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="34dp"
        app:layout_constraintTop_toTopOf="@+id/topguideline"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/acd_nombre_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        app:layout_constraintTop_toTopOf="@+id/acd_bienvenido_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="50dp"
    />
    <TextView
        android:id="@+id/acd_misdatos_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Datos"
        android:textSize="44dp"
        app:layout_constraintTop_toTopOf="@+id/acd_nombre_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="100dp"
    />
    <TextView
        android:id="@+id/acd_userName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="@+id/acd_misdatos_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="90dp"
    />
    <TextView
        android:id="@+id/acd_userMail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="@+id/acd_userName_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="70dp"
    />
    <TextView
    android:id="@+id/acd_userPhone_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="24dp"
    app:layout_constraintTop_toTopOf="@+id/acd_userMail_tv"
    app:layout_constraintEnd_toStartOf="@+id/rightguideline"
    app:layout_constraintStart_toStartOf="@+id/leftguideline"
    android:layout_marginTop="70dp"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />

</androidx.constraintlayout.widget.ConstraintLayout>