<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/am_bienvenido_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a mi portfolio"
        android:textSize="28dp"
        app:layout_constraintTop_toTopOf="@+id/topguideline"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="70dp"
    />

    <EditText
        android:id="@+id/am_ingrese_nombre_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre"
        android:textSize="28dp"
        app:layout_constraintTop_toTopOf="@+id/am_bienvenido_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="70dp"
    />

    <Button
        android:id="@+id/am_acercaDeMi_bt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Acerca de mi"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/am_bienvenido_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="150dp"
    />
    <Button
        android:id="@+id/am_proyectos_bt"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Proyectos"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/am_acercaDeMi_bt"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="80dp"
    />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
