<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProjectDetail">

    <ImageView
        android:id="@+id/ap_project_imageView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/topguideline"
        app:srcCompat="@drawable/screen_svgrepo_com"
    />

    <TextView
        android:id="@+id/ap_information_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_project_imageView"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="10dp"
    />

    <TextView
        android:id="@+id/ap_projectname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Project name:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_information_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectnameData_tv"
        app:layout_constraintStart_toEndOf="@id/leftguideline"
    />

    <TextView
        android:id="@+id/ap_projectnameData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_information_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectname_tv"
        android:layout_marginTop="30dp"
    />

    <TextView
        android:id="@+id/ap_projectDescription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectname_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectDescriptionData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/ap_projectDescriptionData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectnameData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectDescription_tv"
        android:layout_marginTop="20dp"
    />

    <TextView
        android:id="@+id/ap_projectOwner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectDescription_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectOwnerData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/ap_projectOwnerData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectDescriptionData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectOwner_tv"
        android:layout_marginTop="20dp"
    />

    <TextView
        android:id="@+id/ap_projectCollaborators_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collaborators:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectOwner_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectCollaboratorsData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/ap_projectCollaboratorsData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectOwnerData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectCollaborators_tv"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/ap_github_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectCollaborators_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/leftguideline"
        app:srcCompat="@drawable/github_svgrepo_com"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />

</androidx.constraintlayout.widget.ConstraintLayout>