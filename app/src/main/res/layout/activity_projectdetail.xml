<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProjectDetail">

    <ImageView
        android:id="@+id/ap_project_imageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/topguideline"
        app:srcCompat="@drawable/coding_project_svgrepo_com"
    />

    <TextView
        android:id="@+id/ap_information_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informacion"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_project_imageView"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
    />

    <TextView
        android:id="@+id/ap_projectname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_information_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectnameData_tv"
        app:layout_constraintStart_toEndOf="@id/leftguideline"
        android:layout_marginTop="10dp"
        android:layout_marginRight="27dp"
    />

    <TextView
        android:id="@+id/ap_projectnameData_tv"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_information_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectname_tv"
    />

    <TextView
        android:id="@+id/ap_projectDescription_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectname_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_projectDescriptionData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
    />

    <TextView
        android:id="@+id/ap_projectDescriptionData_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:maxHeight="130dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_projectDescription_tv"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectnameData_tv" />

    <TextView
        android:id="@+id/ap_language_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lenguaje:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectDescriptionData_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_languageData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="15dp"
        android:layout_marginRight="22dp"
    />
    <TextView
        android:id="@+id/ap_languageData_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_projectDescriptionData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_language_tv"
    />

    <TextView
        android:id="@+id/ap_createdAt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creado:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_language_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_createdAtData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="15dp"
        android:layout_marginRight="37dp"
        />
    <TextView
        android:id="@+id/ap_createdAtData_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_languageData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_createdAt_tv"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ap_updatedAt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificado:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_createdAt_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_updatedAtData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="15dp"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:id="@+id/ap_updatedAtData_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_createdAtData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_updatedAt_tv"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/ap_pushedAt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultimo push:"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_updatedAt_tv"
        app:layout_constraintEnd_toStartOf="@+id/ap_pushedAtData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/ap_pushedAtData_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_updatedAtData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/ap_pushedAt_tv"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/ap_github_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ap_pushedAt_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/leftguideline"
        app:srcCompat="@drawable/github_svgrepo_com"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />

</androidx.constraintlayout.widget.ConstraintLayout>