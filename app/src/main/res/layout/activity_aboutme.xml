<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutMe">

    <ImageView
        android:id="@+id/ah_home_imageView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/topguideline"
        app:srcCompat="@drawable/avatar_svgrepo_com" />

    <TextView
        android:id="@+id/aam_information_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ah_home_imageView"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/aam_fullname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullname:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_information_tv"
        app:layout_constraintEnd_toStartOf="@+id/aam_fullnameData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="30dp"
    />
    <TextView
    android:id="@+id/aam_fullnameData_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    app:layout_constraintTop_toBottomOf="@+id/aam_information_tv"
    app:layout_constraintEnd_toStartOf="@+id/rightguideline"
    app:layout_constraintStart_toEndOf="@+id/aam_fullname_tv"
    android:layout_marginTop="30dp"
    />
    <TextView
        android:id="@+id/aam_ocupation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocupation:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_fullname_tv"
        app:layout_constraintEnd_toStartOf="@+id/aam_ocupationData_tv"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/aam_ocupationData_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_fullnameData_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/aam_ocupation_tv"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/aam_links_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Links"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_ocupation_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        android:layout_marginTop="30dp"
    />

    <ImageView
        android:id="@+id/aam_linkedin_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_links_tv"
        app:layout_constraintEnd_toStartOf="@+id/aam_gmail_imageView"
        app:layout_constraintStart_toStartOf="@+id/leftguideline"
        app:srcCompat="@drawable/linkedin_svgrepo_com"
    />
    <ImageView
        android:id="@+id/aam_gmail_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_links_tv"
        app:layout_constraintEnd_toStartOf="@+id/aam_github_imageView"
        app:layout_constraintStart_toEndOf="@+id/aam_linkedin_imageView"
        app:srcCompat="@drawable/gmail_svgrepo_com"
    />
    <ImageView
        android:id="@+id/aam_github_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/aam_links_tv"
        app:layout_constraintEnd_toStartOf="@+id/rightguideline"
        app:layout_constraintStart_toEndOf="@+id/aam_gmail_imageView"
        app:srcCompat="@drawable/github_svgrepo_com"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="390dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="690dp" />

</androidx.constraintlayout.widget.ConstraintLayout>